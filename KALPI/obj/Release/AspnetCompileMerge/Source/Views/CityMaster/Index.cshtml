@model WS.Framework.Entity.CityMaster
@{
    ViewBag.Title = "City Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title pull-left">City Record(s)</h3>
                <button id="addToTable" class="btn btn-primary waves-effect waves-light pull-right" onclick="ClearControls()" data-toggle="modal" data-target="#con-close-modal"><i class="fa fa-plus"></i></button>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>City Name</th>
                                        <th>State Name</th>
                                        <th>Is Active</th>
                                        <th>Operation</th>
                                    </tr>
                                </thead>
                                <tbody id="myData"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End row -->

<div id="con-close-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="ClearControls()" aria-hidden="true">×</button>
                <h4 class="modal-title">Add New City</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="CityMasterForm">
                    <input type="hidden" id="cm_id" name="cm_id" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">City Name *</label>
                                <input type="text" class="form-control" id="cm_cityname" name="cm_cityname" maxlength="50" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Select State</label>
                                <select id="cm_stateid" name="cm_stateid" class="form-control">
                                    <option value="00000000-0000-0000-0000-000000000000">Select State</option>
                                    @foreach (WS.Framework.Entity.StateMaster item in ViewBag.StateList)
                                    {
                                        <option value="@item.sm_id">@item.sm_statename</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="ClearControls()" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                        <button type="button" onclick="Save()" class="btn btn-info waves-effect waves-light">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- /.modal -->
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            GetAll();
        });

        function Save() {
            if ($("#cm_cityname").val() == null || $("#cm_cityname").val() == '') { sweetAlert('City Name required !'); return false; }
            else if ($("#cm_stateid").val() == '00000000-0000-0000-0000-000000000000') { sweetAlert('State required !'); return false; }
            var formmodel = $("#CityMasterForm").serialize();
            $.post("/CityMaster/Save", formmodel, function (resdata) {
                $("#cm_id").val('');
                $("#con-close-modal").modal('hide');
                sweetAlert(resdata);
                GetAll();
                ClearControls();
            });
        }

        function EditRecord(id) {
            $("#cm_id").val(id)
            var mData = "{id:'" + id + "'}";
            $.ajax({
                type: "POST",
                url: "/CityMaster/Get_GetAll",
                data: mData,
                contentType: "application/json",
                dataType: "json",
                success: function (mRes) {
                    if (mRes.length > 0) {
                        $("#cm_cityname").val(mRes[0].cm_cityname);
                        $("#cm_stateid").val(mRes[0].cm_stateid);
                    }
                }
            });
        }

        function UpdateRecord(id, actionID) {
            swal({
                title: "Are you sure ?",
                text: "",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: (actionID == '1' ? "Yes, delete it!" : "Yes, change it!"),
                closeOnConfirm: false
            }, function () {

                var mData = "{id:'" + id + "',ActionType:'" + actionID + "'}";
                $.ajax({
                    type: "POST",
                    url: "/CityMaster/GeneralAction",
                    data: mData,
                    contentType: "application/json",
                    dataType: "json",
                    success: function (mRes) {
                        if (actionID == '1') {
                            swal("Deleted!", "Record delete successfully.", "success");
                        }
                        else { swal("Changed!", "Record statue change successfully.", "success"); }
                        GetAll();
                    }
                });
            });
        }

        function GetAll() {
            var mData = "{id:'" + ($("#cm_id").val() == '' ? '00000000-0000-0000-0000-000000000000' : $("#cm_id").val()) + "'}";
            $.ajax({
                type: "POST",
                url: "/CityMaster/Get_GetAll",
                data: mData,
                contentType: "application/json",
                dataType: "json",
                success: function (mRes) {
                    if (mRes.length > 0) {
                        var InnerHTML = '';
                        for (var i = 0; i < mRes.length; i++) {
                            InnerHTML += '<tr>';
                            InnerHTML += '<td>' + mRes[i].cm_cityname + '</td>';
                            InnerHTML += '<td>' + mRes[i].sm_statename + '</td>';
                            InnerHTML += '<td><button type="button" id=' + mRes[i].cm_id + ' onclick="UpdateRecord(this.id,2)" class="btn btn-' + (mRes[i].cm_isactive == true ? 'info' : 'danger') + ' waves-effect waves-light">' + (mRes[i].cm_isactive == true ? 'Active' : 'DeActive') + '</button></td></td>';
                            InnerHTML += '<td><button type="button" id=' + mRes[i].cm_id + ' onclick="EditRecord(this.id)" data-toggle="modal" data-target="#con-close-modal" class="btn btn-info waves-effect waves-light"><i class="md-mode-edit"></i></button>&nbsp;'
                                + '<button type="button" id=' + mRes[i].cm_id + ' onclick="UpdateRecord(this.id,1)" class="btn btn-danger waves-effect waves-light"><i class="md-delete"></i></button></td>';
                            InnerHTML += '</tr>';
                        }
                        $("#myData").html(InnerHTML);
                    }
                    else { $("#myData").html(''); }
                }
            });
        }

        function ClearControls() {
            $("#cm_id").val('');
            $("#cm_cityname").val('');
            $("#cm_stateid").val('00000000-0000-0000-0000-000000000000');
        }
    </script>
}